#
# Config file for sSMTP sendmail
#
# The person who gets all mail for userids < 1000
# Make this empty to disable rewriting.
root={{ getenv "SSMTP_ROOT_EMAIL" "root" }}

# The place where the mail goes. The actual machine name is required no
# MX records are consulted. Commonly mailhosts are named mail.domain.com
mailhub={{ getenv "SSMTP_MAILHUB" "localhost:25" }}

# Where will the mail seem to come from?
rewriteDomain={{ getenv "SSMTP_REWRITE_DOMAIN" "" }}

# The full hostname
hostname={{ getenv "SSMTP_HOSTNAME" "localhost.localdomain" }}

# Are users allowed to set their own From: address?
# YES - Allow the user to specify their own From: address
# NO - Use the system generated From: address
FromLineOverride={{ getenv "SSMTP_FROM_LINE_OVERRIDE" "YES" }}

# Username and password for Google's Gmail servers
# From addresses are settled by Mutt's rc file, so
# with this setup one can still achieve multi-user SMTP
AuthUser={{ getenv "SSMTP_AUTH_USER" "" }}
AuthPass={{ getenv "SSMTP_AUTH_PASS" "" }}
AuthMethod={{ getenv "SSMTP_AUTH_METHOD" "LOGIN" }}

UseTLS={{ getenv "SSMTP_USE_TLS" "YES" }}
UseSTARTTLS={{ getenv "SSMTP_USE_STARTTLS" "YES" }}
